
<Window x:Class="ConcreteCrackManager.Views.AddEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add / Edit" Height="300" Width="420">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="4">
            <TextBlock Text="{Binding DialogTitle}" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="4">
            <TextBlock Text="Name"/>
            <TextBox Text="{Binding Name}" />
            <TextBlock Text="Location"/>
            <TextBox Text="{Binding Location}" />
            <TextBlock Text="Inspected At"/>
            <DatePicker SelectedDate="{Binding InspectedAt}" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="4">
            <Button Content="Save" Click="OnSave" Width="80" Margin="4"/>
            <Button Content="Cancel" Click="OnCancel" Width="80" Margin="4"/>
        </StackPanel>
    </Grid>
</Window>
