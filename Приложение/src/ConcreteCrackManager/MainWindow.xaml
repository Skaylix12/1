
<Window x:Class="ConcreteCrackManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Concrete Crack Manager" Height="700" Width="1000">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Connection..." Click="OnConnectionClick"/>
                <Separator/>
                <MenuItem Header="Exit" Click="OnExitClick"/>
            </MenuItem>
            <MenuItem Header="_Data">
                <MenuItem Header="Inspections" Click="OnInspectionsClick"/>
                <MenuItem Header="Images" Click="OnImagesClick"/>
                <MenuItem Header="Defects" Click="OnDefectsClick"/>
            </MenuItem>
            <MenuItem Header="_Admin">
                <MenuItem Header="Users & Roles" Click="OnUsersClick"/>
                <MenuItem Header="DB Roles (Postgres SQL)" Click="OnDbRolesClick"/>
            </MenuItem>
        </Menu>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
